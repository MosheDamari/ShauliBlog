                    ctx.fillStyle = "yellow";
                    ctx.fillRect(40, 40, 75, 50);
                    ctx.fillStyle = "green";
                    ctx.fillRect(60, 60, 75, 50);
                    ctx.fillStyle = "blue";
                    ctx.fillRect(80, 80, 75, 50);
